<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="smax.batch30.A3.controller.ProductDetail"
		xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Product Detail">
		<content>
		 <VBox>
            <Text text="{ProductID}"/>	
            <Text text="{Name}"/>	
            <Text text="{Category}"/>	
            <Text text="{Description}"/>	
         </VBox>   
		</content>
		<footer>
		  <Bar>
		    <contentRight>
		        <Button text="Create" press="onCreate"/>
		    </contentRight>
		  </Bar>
		</footer>
	</Page>
</core:View>